# Binance API Configuration - MAINNET
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Binance API Configuration - TESTNET
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

BINANCE_TESTNET=True  # Set to False for real trading (use with caution!)
# Enable/disable Binance bot (set False to run Upstox only)
BINANCE_ENABLED=False

# Binance Product Type: SPOT (current) or MARGIN (future support)
# SPOT = Regular trading with full capital (uses /api/v3/order endpoints)
# MARGIN = Leveraged trading (not yet implemented, would use /sapi/v1/margin/order)
BINANCE_PRODUCT_TYPE=SPOT

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# Path to supplemental instruction file appended to the base system prompt.
# Defaults to deepseek_instruction.md in the project root. Uncomment to override.
# DEEPSEEK_INSTRUCTION_PATH=deepseek_instruction.md

# Trading Configuration
# Auto-select pairs based on AI sentiment analysis (True) or use manual pairs (False)
AUTO_SELECT_PAIRS=True
# Multiple pairs - comma separated (BTCUSDT,ETHUSDT,SOLUSDT) - used when AUTO_SELECT_PAIRS=False
TRADING_PAIRS=BTCUSDT
TRADING_AMOUNT_QUOTE=6  # Amount in USDT per trade (6 USDT per trade)
STOP_LOSS_PERCENT=0.5  # Stop loss % (scalping strategy)
TAKE_PROFIT_PERCENT=1.0  # Take profit % (scalping strategy, 1:2 RR)
## LEGACY: global daily trades limit (kept for backward compatibility)
# MAX_DAILY_TRADES=10
# Prefer per-market limits below. If per-market vars are missing, the code
# will fall back to `MAX_DAILY_TRADES` for backwards compatibility.
#
# Per-market daily trade limits (each bot has its own counter — set independently)
UPSTOX_MAX_DAILY_TRADES=10
BINANCE_MAX_DAILY_TRADES=10
MAX_POSITION_PER_PAIR=20  # Max USDT allocated per trading pair
MAX_PORTFOLIO_EXPOSURE=50  # Max total USDT at risk across all positions
BINANCE_MAX_OPEN_POSITIONS=3  # Max concurrent open trades for Binance

# Bot Configuration
# CHECK_INTERVAL_SECONDS: Check every 5 minutes to align with 5-minute candles for multi-timeframe analysis
CHECK_INTERVAL_SECONDS=300
AI_CONFIDENCE_THRESHOLD=0.6

# Database
# PostgreSQL: Use your Neon database connection string
DATABASE_URL=your_postgresql_database_url_here

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# ══════════════════════════════════════════════════════════════
# Upstox Configuration (Indian Stock Market)
# ══════════════════════════════════════════════════════════════
UPSTOX_ENABLED=True
UPSTOX_API_KEY="your_upstox_api_key_here"
UPSTOX_API_SECRET="your_upstox_api_secret_here"
UPSTOX_REDIRECT_URI=http://127.0.0.1:8000/upstox/callback
# Live token - obtained via OAuth flow (/upstox/callback) after segment activation
UPSTOX_ACCESS_TOKEN=""
# Sandbox token - generated from https://account.upstox.com/developer/apps (Generate button)
UPSTOX_SANDBOX_ACCESS_TOKEN="your_sandbox_token_here"
UPSTOX_SANDBOX=True
UPSTOX_MOCK_BALANCE=10000

# Upstox Sandbox Credentials (used automatically when UPSTOX_SANDBOX=True)
UPSTOX_SANDBOX_API_KEY="your_sandbox_api_key_here"
UPSTOX_SANDBOX_API_SECRET="your_sandbox_api_secret_here"

# Upstox Trading Pairs – comma-separated instrument tokens
# Auto-select pairs based on AI sentiment analysis (True) or use manual pairs (False)\nUPSTOX_AUTO_SELECT_PAIRS=True
# Find instrument tokens from: https://upstox.com/developer/api-documentation/instruments
# Examples: NSE_EQ|INE848E01016 (PNB), NSE_EQ|INE002A01018 (RIL) - used when UPSTOX_AUTO_SELECT_PAIRS=False
UPSTOX_TRADING_PAIRS=NSE_EQ|INE848E01016

# Upstox trade amount in INR per trade
UPSTOX_TRADING_AMOUNT=1000

# Product type: I = Intraday, D = Delivery, MTF = Margin Trading
UPSTOX_PRODUCT_TYPE=I

# Margin utilization for intraday orders (percentage of UPSTOX_TRADING_AMOUNT)
# 100 = use full permitted amount, 50 = use half, etc.
UPSTOX_MARGIN_PERCENT=100

# Upstox Risk Management (in INR)
UPSTOX_MAX_POSITION_PER_PAIR=5000
UPSTOX_MAX_OPEN_POSITIONS=3
UPSTOX_MAX_PORTFOLIO_EXPOSURE=10000
